{
  "non_empty_string": {
    "type": "string",
    "minLength": 1,
    "clientMinLength": 1
  },
  "color": {
    "type": "string",
    "format": "color"
  },
  "url": {
    "type": "string",
    "format": "uri"
  },
  "temperature": {
    "type": "string",
    "pattern": "^0|([\\+\\-][1-9]\\d{0,2}?)$"
  },
  "time-hhmm": {
    "type": "string",
    "pattern": "^\\d{1,2}\\:\\d{2}$"
  },
  "positive_integer": {
    "type": "integer",
    "constraint": "number > 0"
  },
  "non_negative_integer": {
    "type": "integer",
    "constraint": "number >= 0"
  },
  "boolean_int": {
    "type": "integer",
    "enum": [
      0, 1
    ],
    "format": "boolean"
  }
}
