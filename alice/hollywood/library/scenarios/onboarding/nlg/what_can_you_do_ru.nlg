{% macro render_what_can_you_do_phrase(phrases, index) %}
  {% if phrases %}
    {% set phrase = phrases[(index or 0) % (phrases|length)] %}
    {% if phrase.voice %}
      {% text %}
        {{ phrase.text }}
      {% endtext %}
      {% voice %}
        {{ phrase.voice }}
      {% endvoice %}
    {% else %}
      {{ phrase.text }}
    {% endif %}
    {% chooseline %}
      Рассказать ещё?
      Продолжить?
      Хотите узнать больше, скажите «да».
      Хотите узнать ещё?
      Рассказывать ещё?
      Продолжим?
    {% endchooseline %}
  {% endif %}
{% endmacro %}


{% phrase what_can_you_do_speakers %}
  {% if context.Phrase %}
    {{ render_what_can_you_do_phrase([dict(text=context.Phrase.Text, voice=context.Phrase.Voice)], 0) }}
  {% elif context.ScreenMode == "main" or context.ScreenMode == "mordovia_webview" %}
      {% if context.IsTvPlugged %}
        {{ render_what_can_you_do_phrase(quasar_main_screen_phrases, context.PhraseIndex) }}
      {% else %}
        {{ render_what_can_you_do_phrase(quasar_main_no_screen_phrases, context.PhraseIndex) }}
      {% endif %}
  {% elif context.ScreenMode in ["gallery", "filmsSearch", "videoSearch", "search_results", "videoEntity/RelatedCarousel"] %}
    {{ render_what_can_you_do_phrase(quasar_gallery_phrases, context.PhraseIndex) }}
  {% elif context.ScreenMode in ["season_gallery", "videoEntity/Seasons"] %}
    {{ render_what_can_you_do_phrase(quasar_season_gallery_phrases, context.PhraseIndex) }}
  {% elif context.ScreenMode in ["tv_gallery", "channels"] %}
    {{ render_what_can_you_do_phrase(quasar_channels_phrases, context.PhraseIndex) }}
  {% elif context.ScreenMode in ["description", "videoEntity", "videoEntity/Description"] %}
    {{ render_what_can_you_do_phrase(quasar_description_phrases, context.PhraseIndex) }}
  {% elif context.ScreenMode ==  "videoEntity/Carousel" %}
    {{ render_what_can_you_do_phrase(quasar_gallery_phrases + quasar_description_phrases, context.PhraseIndex) }}
  {% elif context.ScreenMode ==  "payment" %}
    {{ render_what_can_you_do_phrase(quasar_payment_phrases, context.PhraseIndex) }}
  {% elif context.ScreenMode ==  "music_player" %}
    {{ render_what_can_you_do_phrase(quasar_music_player_phrases, context.PhraseIndex) }}
  {% elif context.ScreenMode ==  "video_player" %}
    {{ render_what_can_you_do_phrase(quasar_video_player_phrases, context.PhraseIndex) }}
  {% elif context.ScreenMode ==  "tv_player" %}
    {{ render_what_can_you_do_phrase(quasar_tv_player_phrases, context.PhraseIndex) }}
  {% elif context.ScreenMode ==  "tv_player_personal" %}
    {{ render_what_can_you_do_phrase(quasar_tv_player_personal_phrases, context.PhraseIndex) }}
  {% elif context.ScreenMode ==  "radio_player" %}
    {{ render_what_can_you_do_phrase(quasar_radio_player_phrases, context.PhraseIndex) }}
  {% elif context.ScreenMode ==  "music_playing" %}
    {{ render_what_can_you_do_phrase(quasar_music_playing_phrases, context.PhraseIndex) }}
  {% else %}
    {{ render_what_can_you_do_phrase(quasar_main_screen_phrases, context.PhraseIndex) }}
  {% endif %}
{% endphrase %}
