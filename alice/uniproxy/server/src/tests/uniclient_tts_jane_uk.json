[
    {
        "action": "set_timeout",
        "timelimit": 7
    },
    {
        "action": "load_library",
        "filename": "uniclient__common.json"
    },
    {
        "action": "from_library",
        "use": "send_synchronize_state"
    },
    {
        "action": "send_message",
        "message": {
            "event": {
                "header": {
                    "namespace": "TTS",
                    "name": "Generate"
                },
                "payload": {
                    "text": "1 2 3",
                    "voice": "jane",
                    "lang": "uk-UK",
                    "platform": "test",
                    "application": "test",
                    "format": "Opus",
                    "quality": "UltraHigh",
                    "disable_cache": true,
                    "key": "developers-simple-key"
                }
            }
        },
        "apply_to_message": [
            "new_message_id",
            "old_uuid"
        ]
    },
    {
        "action": "recv_message",
        "sample": {
            "directive": {
                "header": {
                    "namespace": "TTS",
                    "name": "Speak"
                },
                "payload": {
                    "format": "audio/opus"
                }
            }
        }
    },
    {
        "action": "recv_message",
        "sample": {
            "streamcontrol": {
                "action": 0,
                "reason": 0,
                "streamId": 2
            }
        }
    },
    {
        "action": "check_received_data",
        "stream_id": 2,
        "min_binary_data_size": 1000
    }
]
