import: alarm/alarms.grnt
import: common/commands.grnt

form personal_assistant.scenarios.alarm_general:
    root:
        .* $Alarm .*

        %negative
        [$Common.Play? $Alarm.MusicLikeAlarm]

$Alarm:
    %lemma
    будильник
    будить
    буди
    разбудить
    разбуди
    проснуться
    просыпаться
