import: common/filler.grnt
import: common/pronouns.grnt

form personal_assistant.scenarios.alarm_how_long:
    root:
        [(во? сколько|как? долго)+ еще? $Common.PronounMe? осталось? $Time? (можно? (спать|поспать)|до пробуждения|до $Alarm|до $AlarmRing|до подъема)+ (по времени)? $When?]
        [как? (скоро ли?) ты? $Common.PronounMe? (разбудишь|будешь будить)]
        [через (сколько $Time?|какое время)+ (осталось? до)? ($Alarm|$AlarmRing|$GetUp) $When? (сколько осталось?)*]
        [(сколько (отсалось|есть)? $Time?|какое? время)+ (осталось|есть)? (до|для|от)? ($AlarmRing|$Alarm|$Aweking) (сколько осталось? до конца)*]
        [$Alarm через (сколько $Time?|какое время|когда)  $Ring]
        [(сколько $Time?|какое время) осталось спать (до ($Alarm|$AlarmRing))?]
        (еще спать или уже вставать)
        [скоро уже $Alarm готов будет]
        [скоро $Alarm $Ring]

    filler:
        $nonsense
        $Common.Filler
        $Common.WayToCallAlice
        $Common.LeftFiller
        у? $Common.PronounMe
        у? $Common.PronounYou
        скажи мне точное время
        посчитай|скажи
        должен
        еще
        того как
        сейчас
        он
        тоже

    $Alarm:
        %lemma
        мой? будильник
        ближайшего будильник
        завтрашнего будильник
        следующего будильник
        последнего будильник
        первый будильник
        этот будильник
        этого будильник
        когда пройдет будильник

    $Ring:
        %lemma
        сработает
        срабатывание
        заработает
        включится
        включить
        включение
        будет
        сыграет
        позвонит
        прозвонит
        звонит
        будет звонить
        будет сработать
        прозвенит
        прозвенение
        проиграет
        пробудит
        прозвучит
        прозвучение
        прозвучaния
        пройдет
        зазвенит
        зазвонит
        заиграет
        закончится
        заведен
        звонок|сигнал
        окончания
        отключения
        конца
        начала
        установлен
        разбудит
        будильника
        звук
        стоит
        идти
        пройдет

    $AlarmRing:
        [$Alarm $Ring]

    $GetUp:
        %lemma
        $Common.PronounMe? вставать
        $Common.PronounMe? просыпаться
        $Common.PronounYou? $Common.PronounMe? разбудишь

    $Time:
        %lemma
        время
        минут
        часов
        секунд

    $When:
        %lemma
        до? (утром|в обед|вечером|$sys.time)
        $sys.date|$sys.weekdays

    $Aweking:
        %lemma
        пробуждение
        просыпаться
        подъем

