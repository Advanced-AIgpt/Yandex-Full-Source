{
  "compilerOptions": {
    "outDir": "build",
    "allowJs": true,
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "rootDir": "src",
    "lib": ["es2018", "dom"],
    "types": ["node", "jest"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "compileOnSave": true
}
