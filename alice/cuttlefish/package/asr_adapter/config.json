{
    "server": {
        "http": {
            "port": 10500,
            "apphost_threads": 12
        },
        "grpc": {
            "port": 10501
        },
        "log": {
            "eventlog": "/logs/current-asr_adapter.evlog"
        },
        "rtlog": {
            "service": "asr_adapter",
            "file": "/logs/current-asr_adapter.rtlog"
        },
        "metrics": {
            "service_name": "asr_adapter"
        },
        "lock_memory": true
    },
    "asr": {
        "protocol_version": 1,
        "host": "localhost",
        "port": 80,
        "path": "/asr",
        "asr1": {
            "wait_spotter_after_eou": "300ms"
        }
    }
}
