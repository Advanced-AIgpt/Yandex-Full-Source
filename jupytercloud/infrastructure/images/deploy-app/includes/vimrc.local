syntax on
filetype indent plugin on

set number
set ruler
set history=50
set showcmd
set list
set listchars=tab:→\ ,trail:·
set t_Co=256
set nocompatible
set encoding=utf-8

set smartindent
set smarttab
set expandtab

set tabstop=8
set shiftwidth=4
set softtabstop=4

au BufRead,BufNewFile *.sls set expandtab shiftwidth=2 filetype=yaml
au BufRead,BufNewFile *.py set expandtab shiftwidth=4 filetype=python
